<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg6"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/hang1"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/pause"
            android:layout_width="59dp"
            android:layout_height="62dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/bt_pause"
            android:layout_alignParentRight="true"/>
        <RelativeLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:background="@drawable/bien">

            <TextView
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="00:00"
                android:textAlignment="center"
                android:textColor="@color/color_diem"
                android:textSize="20sp" />


        </RelativeLayout>

        <Button
            android:id="@+id/nut_thoat"
            android:layout_width="59dp"
            android:layout_height="62dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/custombackbutton" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="6">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bang"
            android:layout_weight="2">

            <TextView
                android:id="@+id/tv_Ch"
                android:layout_width="338dp"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:textColor="#fff"
                android:text="Cau hoi"
                android:textSize="@dimen/text_size"/>

        </RelativeLayout>
        <LinearLayout
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:orientation="horizontal">
            <Button
                android:id="@+id/bt_da1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A"/>
            <Button
                android:id="@+id/bt_da2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B"/>
            <Button
                android:id="@+id/bt_da3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="C"/>
            <Button
                android:id="@+id/bt_da4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="D"/>

        </LinearLayout>

    </LinearLayout>




</LinearLayout>